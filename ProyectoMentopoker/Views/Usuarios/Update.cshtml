@using System.Security.Claims;
@model UsuarioModel

   @if
                         (@Context.User.FindFirst(ClaimTypes.Role)?.Value == "admin")
    {


<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">


                            <a class="nav-link text-white" asp-area="" asp-controller="Usuarios" asp-action="Crud"><button class="btn btn-info">Volver</button></a>
                            <br />
                            <br />
                            <br />
                            <form method="post">
                            
                                <input type="hidden" name="Usuario_id" class="form-control" required value="@Model.Usuario_id" />

                                <div class="form-outline form-white mb-4">
                                    <label class="form-label" for="typeEmailX">Email</label>
                                    <input type="text" name="Email" class="form-control form-control-lg" required value="@Model.Email" />
                    
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <label class="form-label" for="tyoeNameX">Nombre</label>
                                    <input type="text" name="Nombre" class="form-control form-control-lg" required value="@Model.Nombre" />

                                </div>



 


                              


                                <div class="form-outline form-white mb-4">
                                    <label class="form-label" for="typeSelect">Rol</label>
                                    <select name="rol" class="form-control" required>
                                        <option value="admin">Admin</option>
                                        <option value="user">User</option>
                                    </select>
                            
                                </div>
                                <button class="btn btn-outline-light btn-lg px-5" type="submit">Modificar usuario</button>
                            </form>


                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>

}
else
{

    <h1>No tienes permisos para acceder a esta funcionalidad</h1>
}





