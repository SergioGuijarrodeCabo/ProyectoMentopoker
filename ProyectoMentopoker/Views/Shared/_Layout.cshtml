<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark nav-background">
  <div class="container-fluid div-background">
            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/logo.png" style="height:20%; width:20%;" /></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">

                <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">
          <ul class="navbar-nav flex-grow-1">
                      
                       
             
                             <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="PartidaConTabla" asp-action="Jugar">Partida</a>
                        </li>
                         </li>
                             <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Estadisticas" asp-action="VerPartidas">Estadísticas partidas</a>
                        </li>
                            
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Estadisticas" asp-action="VerJugadas">Estadísticas jugadas</a>
                    </li>






                    </ul>

                  </div>




                @if
         (@Context.User.FindFirst(ClaimTypes.Role)?.Value == "admin")
                {
                    <div class="mx-auto order-0 justify-content-center">
                        <ul class="navbar-nav flex-grow-1">

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Usuarios" asp-action="Crud">Usuarios</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Partidas" asp-action="Crud">Partidas</a>
                            </li>
                        </ul>

                    </div>


               }

                
                    
            


                <div class="navbar-collapse collapse w-100 order-3 dual-collapse2 justify-content-end">

                        <ul class="navbar-nav me-auto">
                        <partial name="_MenuUsuario" />

                        </ul>
                </div>
               
     

           </div>

