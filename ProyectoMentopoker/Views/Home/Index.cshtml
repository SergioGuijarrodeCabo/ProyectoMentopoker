          <a class="nav-link text-white" asp-area="" asp-controller="Estadisticas" asp-action="VerJugadas"><img src="~/images/imagenStatsJugadas.png"></a>
          <figcaption class="img-content">
            <h2 class="title colorTexto">Estadísticas jugadas</h2>

